    <div class="container">
      <h2>It's Manly Ferry Timetable Time!</h2>

      <div id='timetable'>
        <p>Showing full departure timetable for <%= params[:date] %></p>
<img src="/img/Slow_Ferry.png" class="pull-left">
<h6>&nbsp;Slow Ferry</h6>

          <p>To Manly</p>
          <ul>
            <% @departure_times['To Manly:Slow Ferry'].each do |time| %>
            <li><%= time %></li>
            <% end %>
          </ul>

          <p>From Manly</p>
          <ul>
            <% @departure_times['From Manly:Slow Ferry'].each do |time| %>
            <li><%= time %></li>
            <% end %>
          </ul>

<img src="/img/Manly_Fast_Ferry.png" class="pull-left">
<h6>&nbsp;<a href= "http://www.manlyfastferry.com.au">Manly Fast Ferry</a></h6>

          <p>To Manly</p>
          <ul>
            <% @departure_times['To Manly:Manly Fast Ferry'].each do |time| %>
            <li><%= time %></li>
            <% end %>
          </ul>

          <p>From Manly</p>
          <ul>
            <% @departure_times['From Manly:Manly Fast Ferry'].each do |time| %>
            <li><%= time %></li>
            <% end %>
          </ul>

<img src="/img/Sydney_Fast_Ferries.png" class="pull-left">
<h6>&nbsp;<a href="http://www.sydneyfastferries.com.au">Sydney Fast Ferries</a></h6>
          <p>To Manly</p>
          <ul>
            <% @departure_times['To Manly:Sydney Fast Ferries'].each do |time| %>
            <li><%= time %></li>
            <% end %>
          </ul>

          <p>From Manly</p>
          <ul>
            <% @departure_times['From Manly:Sydney Fast Ferries'].each do |time| %>
            <li><%= time %></li>
            <% end %>
          </ul>

      </div>
      <ul class="nav nav-pills nav-stacked">
      <li><a href= "/">Upcoming departures</a></li>
      <li><a href= "/about.html"><i class="icon-question-sign"></i> About</a></li>
      </ul>
    </div>

